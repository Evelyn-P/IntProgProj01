<div class = "row">

  <%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
  <% end %>

  <div class = "control-group">
    <%= f.label :Invoice_id, class: 'control-label' %><br>
    <div class = "controls">
      <%= f.text_field :Invoice_id %>
    </div>
  </div>

  <div class = "control-group">
    <%= f.label :Product_Name, class: 'control-label' %><br>
    <div class = "controls">
      <%= f.text_field :Product_Name %>
    </div>
  </div>

  <div class = "control-group">
    <%= f.label :Category, class: 'control-label' %><br>
    <div class = "controls">
      <%= f.text_field :Category %>
    </div>
  </div>

  <div class = "control-group">
    <%= f.label :Product_URL, class: 'control-label' %><br>
    <div class = "controls">
      <%= f.text_field :Product_URL %>
    </div>
  </div>

  <div class = "control-group">
    <%= f.label :Quantity, class: 'control-label' %><br>
    <div class = "controls">
      <%= f.number_field :Quantity %>
    </div>
  </div>

  <div class = "control-group">
    <%= f.label :Details, class: 'control-label' %><br>
    <div class = "controls">
      <%= f.text_field :Details %>
    </div>
  </div>

  <div class="control-group">
    <div class = "controls">
      <%= f.submit 'Create Product', class: 'btn btn-success' %>
    </div>
  </div>

</div>

<% end %>
