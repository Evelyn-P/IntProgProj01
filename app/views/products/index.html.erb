<h1>Listing Products</h1>


<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">

      <thead>
        <tr>
          <th>Invoice</th>
          <th>Product name</th>
          <th>Category</th>
          <th>Product url</th>
          <th>Quantity</th>
          <th>Details</th>
          <th colspan="3"></th>
        </tr>
      </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.Invoice %></td>
        <td><%= product.Product_Name %></td>
        <td><%= product.Category %></td>
        <td><%= product.Product_URL %></td>
        <td><%= product.Quantity %></td>
        <td><%= product.Details %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

