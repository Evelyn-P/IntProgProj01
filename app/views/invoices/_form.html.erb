<div class = "row">

  <%= form_for @invoice, html: { class: 'form-horizontal' }  do |f| %>
    <% if @invoice.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

        <ul>
        <% @invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class = "control-group">
      <%= f.label :Date, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.date_select :Date %>
      </div>
    </div>

    <div class = "control-group">
      <%= f.label :Company, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :Company %>
      </div>
    </div>

    <div class = "control-group">
      <%= f.label :Done_By, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :Done_By %>
      </div>
    </div>


    <div class = "control-group">
        <%= f.label "status", class: 'control-label' %>
        <div class = "controls">
          <%= f.select(:Status_Type, options_for_select([['PAID', 'PAID'], ['PENDING', 'PENDING']]), { include_blank: true }) %>
      </div>
    </div>

    <div class="control-group">
      <div class = "controls">
        <%= f.submit 'Create Invoice', class: 'btn btn-success' %>
      </div>
    </div>

</div>

<% end %>
